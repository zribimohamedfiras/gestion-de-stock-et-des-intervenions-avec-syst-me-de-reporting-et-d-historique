{% block body %}

    <div class="right_col" role="main" ng-app="showApp" ng-controller="mainController">
        <div class="">



            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Confirmation affectation<small>Gestion Profil</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" method="post" action="{{ path("sauvgarder_pro_role") }}" >


                                <div class="form-group">


                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Nom de profile a affecter:</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select style="width: 135px" class="select2_single form-control" tabindex="-1" name="name" required="true">
                                            <option></option>
                                            {% for t in profile %}
                                                <option value="{{ t.getName() }}">{{ t.getName() }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                        <input  type="hidden"  required="required" name="nbrole" id="nbrole" class="form-control col-md-7 col-xs-12 " value="{[{ nbr }]}" >

                                </div>








                                <br>
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12 col-md-offset-3">Ajouter Role</label>
                                    <div class="col-md-6 col-sm-6 col-xs-9">
                                        <a ng-click="ajout()"><i class="fa fa-plus-circle"></i> </a>
                                    </div>
                                </div>

                                <br>
                                <div ng-repeat=" n in ranges()">
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Role nÂ° {[{ n }]} <span class="required">*</span></label>
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <select class="form-control" tabindex="-1" name="role{[{n}]}" required="true">
                                                <option></option>
                                                {% for ro in role %}
                                                    <option value="{{ ro.getName() }}">{{ ro.getName() }}</option>
                                                {% endfor %}
                                            </select>

                                        </div>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-xs-12 col-md-offset-5">
                                        <a ng-click="minim()"><i class="fa fa-minus-circle"></i> </a>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-xs-12 ">
                                        <a ng-click="ajout()"><i class="fa fa-plus-circle"></i> </a>
                                    </div>
                                    <br>
                                    <div class="ln_solid"></div>
                                </div>



                                <br>


                                <div class="ln_solid"></div><br>



                                <div class="form-group">
                                    <div class="col-md-5 col-sm-5 col-xs-12 col-md-offset-5">
                                        <button type="reset" class="btn btn-primary">Cancel</button>
                                        <button type="submit" class="btn btn-success">Submit</button>
                                        <a class="btn btn-default submit" href="{{ path('ajouterprofilerole') }}" >Retour</a>
                                    </div>
                                    <div class="col-md-2 col-sm-2 col-xs-12">
                                        <a href="{{ path('afficheprofile') }}" class="btn btn-dark">Affecter un Nouveau profile</a>
                                    </div>
                                </div>

                            </form>
                            </center>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






{% endblock %}

