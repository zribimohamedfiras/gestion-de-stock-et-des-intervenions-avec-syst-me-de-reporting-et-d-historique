{% block body %}
    <div class="right_col" role="main">
        <div class="">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Afficher Profiles <small>Gestion Profile</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <div class="clearfix"></div>
                            <br><br>


                            {% for flash_message in app.session.flashBag.get('notice') %}
                                <div  class="alert alert-success" style="width: 65%">
                                    {{ flash_message }}<br>


                                </div>
                            {% endfor %}
                            <br><br>
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-5">
                                <a class="btn btn-default submit" href="{{ path('ajoutprofile') }}" >Ajouter profile</a>

                            </div>
                            <br><br><br><br>

                            <div class="row">


                                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                    <thead>
                                    <tr>
                                        <th><center>Name</center></th>
                                        <th><center>Description</center></th>

                                        <th><center>Modifier</center></th>
                                        <th><center>Delete</center></th>
                                        <th colspan="2"><center>Affecter un profile</center></th>



                                    </tr>
                                    </thead>

                                    <tbody>

                                    {% for r in res %}
                                        <tr>

                                            <td><center><span> {{ r.getName() }} </span></center> </td>

                                            <td> <center> {{ r.getDescription() }} </center> </td>

                                            <form action="{{ path('modifierprofile') }}" method="post">
                                                <td> <center>  <input type="hidden" name="name" value="{{ r.getName() }}">

                                                        <button type="submit" class="btn btn-default submit" >Modifier</button></center></td></form>


                                            <form action="{{ path('supprimeprofile') }}" method="post">
                                                <td> <center>
                                                        <input type="hidden" name="name" value="{{ r.getName() }}">
                                                        <input type="hidden" name="descriptionancien" value="{{ r.getDescription() }}">

                                                        <a  href="#modal-container-{{ r.getName() }}" role="button" class="btn btn-default submit" data-toggle="modal">Delete</a>
                                                        <div class="modal fade" id="modal-container-{{ r.getName() }}" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">

                                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                                            Ã—
                                                                        </button>
                                                                        <h4 class="modal-title" id="myModalLabel">
                                                                            Delete
                                                                        </h4>
                                                                    </div>
                                                                    <div class="modal-body">
                                                                        Confirmation du suppression
                                                                    </div>
                                                                    <div class="modal-footer">

                                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">
                                                                            Close
                                                                        </button>
                                                                        <button type="submit" class="btn btn-default success">Delete</button>
                                                                        <input type="hidden" name="name" value="{{ r.getName() }}">
                                                                        <input type="hidden" name="descriptionancien" value="{{ r.getDescription() }}">
                                                                    </div>
                                                                </div>

                                                            </div>

                                                        </div></center></td></form>
                                            <form action="{{ path('GereUtlisateur') }}" method="post">
                                                <td> <center>  <input type="hidden" name="name" value="{{ r.getName() }}"><button type="submit" class="btn btn-default submit" >Utlisateur</button></center></td></form>
                                            <form action="{{ path('GereRole') }}" method="post">
                                                <td> <center>  <input type="hidden" name="name" value="{{ r.getName() }}"><button type="submit" class="btn btn-default submit">Role</button></center></td></form>
                                        </tr>

                                    {% endfor %}
                                    </tbody>

                                </table>


                            </div></div></div></div>
            </div>
        </div>
    </div>









{% endblock %}

