{% extends "basegentela.html.twig" %}
{% block title %}Ajout Diffusion{% endblock %}
{% block body %}

<div class="right_col" role="main">
    <div class="">



        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Ajout Diffusion <small>Gestion Intervention</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <center>

                            {{ form_start(form) }}

                            <div class="form-group">

                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    {{ form_row(form.name,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Name'}}) }}

                                </div>
                            </div>


                            <div class="form-group">

                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    {{ form_row(form.fax,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Fax','maxlength':'8','minlength':'8'}}) }}

                                </div>
                            </div>

                            <br><br><br><br><br><br>

                            <div class="form-group">
                                <div class="ln_solid"></div>
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="reset" class="btn btn-primary" >Cancel</button>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                    <a class="btn btn-default submit" href="{{ path('afficherdiffusion') }}" >Retour</a>
                                </div>
                            </div>
                            {{ form_end(form) }}




                        </center>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#birthday').daterangepicker({
                singleDatePicker: true,
                calender_style: "picker_4"
            }, function(start, end, label) {
                console.log(start.toISOString(), end.toISOString(), label);
            });
        });
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <!-- input mask -->
    {% javascripts '@AppBundle/Resources/public/gentelella/js/input_mask/jquery.inputmask.js' output='js/input_mask/jquery.inputmask.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <!-- input_mask -->
    <script>
        $(document).ready(function() {
            $(":input").inputmask();
        });
    </script>
    <!-- /input mask -->
{% endblock %}