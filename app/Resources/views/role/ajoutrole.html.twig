{% extends "basegentela.html.twig" %}
{% block title %}Ajout role!{% endblock %}
{% block body %}

    <div class="right_col" role="main">
        <div class="">



            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Ajout Role <small>Gestion Role</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <center>
                                {{ form_start(form) }}

                                <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {{ form_row(form.name,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Name'}}) }}

                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {{ form_row(form.description,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Description'}}) }}

                                    </div>
                                </div>

                                <br><br><br><br><br><br><br><br>


                                <div class="form-group">
                                    <div class="ln_solid"></div>
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="reset" class="btn btn-primary">Cancel</button>
                                        <a id="modal-853909" href="#modal-container-853909" role="button" class="btn btn-default submit" data-toggle="modal">Ajouter Role</a>
                                        <a class="btn btn-default submit" href="{{ path('afficherole') }}" >Retour</a>
                                    </div>
                                </div>
                                <div class="modal fade" id="modal-container-853909" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">

                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                    ×
                                                </button>
                                                <h4 class="modal-title" id="myModalLabel">
                                                    Save
                                                </h4>
                                            </div>
                                            <div class="modal-body">
                                                Vérifier les champs ou enregistré
                                            </div>
                                            <div class="modal-footer">

                                                <button type="button" class="btn btn-danger" data-dismiss="modal">
                                                    Close
                                                </button>
                                                <button type="submit" class="btn btn-success" >Submit</button>
                                            </div>
                                        </div>

                                    </div>

                                </div>

                                {{ form_end(form) }}
                            </center>
                            <br><br>

                            <br><br><br><br>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






{% endblock %}

