{% block body %}
<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Afficher Hotels <small>Gestion Intervention</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
        <div class="clearfix"></div>
        <br><br>
                        <div class="row">
        <div class="col-md-2 col-sm-2 col-xs-12 col-md-offset-4">
            <a class="btn btn-default submit" href="{{ path('ajouthotel') }}" >Ajouter Hotel</a>
        </div>
                        <div class="col-md-3 col-sm-3 col-xs-12 ">
                            <a class="btn btn-default submit" href="{{ path('afficherbonhotel') }}" >Afficher Bons Hotels</a>
                        </div>
                        </div>
        <br><br><br><br>

        <div class="row">
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th><center>Designation</center></th>
                    <th><center>Adresse</center></th>
                    <th><center>Numero Telephone</center></th>
                    <th><center>Ville</center></th>
                    <th><center>Modifier</center></th>
                    <th><center>Delete</center></th>


                </tr>
                </thead>
                <tbody>
                {% for r in res %}
                    <tr>

                        <td><center> {{ r.getDesignation() }} </center> </td>

                        <td> <center> {{ r.getAdress() }} </center> </td>
                        <td><center>{{ r.getTel() }}</center></td>
                        <td><center>{{ r.getVille() }}</center></td>

                        <form action="{{ path('modifierhotel') }}" method="post">
                            <td> <center>  <input type="hidden" name="designation" value="{{ r.getDesignation() }}"><button type="submit" class="btn btn-default submit" >Modifier</button></center></td></form>
                        <form action="{{ path('supprimerhotel') }}" method="post">
                            <td> <center>  <input type="hidden" name="designation" value="{{ r.getDesignation() }}">


                                    <button type="submit" class="btn btn-default submit">Delete</button>

                                </center></td></form>
                    </tr>

                {% endfor %}
                </tbody>

            </table>


        </div></div></div></div>
        </div>
    </div>
</div>









