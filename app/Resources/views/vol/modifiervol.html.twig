    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
    {% stylesheets filter='cssrewrite' 'Bundles/app/gentelella/css/switchery/switchery.min.css'  %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="right_col" role="main">
        <div class="">



            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Modifier vol <small>Gestion Intervention</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" method="post" action="{{ path("modifier_vol") }}" >

                                <input type="hidden" id="idvol" name="idvol" required="required" class="form-control col-md-7 col-xs-12 " value="{{ res.getIdvol() }}">




                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="LieuDepart">Lieu Depart <span class="required">*</span>
                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <select class="select2_single form-control" tabindex="-1" name="LieuDepart" required="true">
                                            <option value="{{ res.getLieuDepart() }}">{{ res.getLieuDepart() }}</option>
                                            <option value="تونس"> تونس </option>
                                            <option value="زغوان"> زغوان </option>
                                            <option value="توزر"> توزر </option>
                                            <option value="تطاوين"> تطاوين </option>
                                            <option value="سوسة"> سوسة </option>
                                            <option value="سليانة"> سليانة </option>
                                            <option value="سيدي بوزيد"> سيدي بوزيد </option>
                                            <option value="صفاقس"> صفاقس </option>
                                            <option value="نابل"> نابل </option>
                                            <option value="المنستير"> المنستير </option>
                                            <option value="مدنين"> مدنين </option>
                                            <option value="المهدية"> المهدية </option>
