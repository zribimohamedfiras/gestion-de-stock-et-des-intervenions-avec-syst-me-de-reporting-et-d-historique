{% block body %}
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Afficher Vols<small>Gestion intervention</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="clearfix"></div>
                    <br><br>
        <div class="col-md-2 col-sm-2 col-xs-12 col-md-offset-4">
            <a class="btn btn-default submit" href="{{ path('ajoutvol') }}" >Ajouter vol</a>

        </div>
        <div class="col-md-3 col-sm-3 col-xs-12 ">
            <a class="btn btn-default submit" href="{{ path('afficherbonvol') }}" >Afficher Bon Vol </a>

        </div>
        <br><br><br><br>

        <div class="row">
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th><center>N° Vol</center></th>
                    <th><center>Lieu Depart</center></th>
                    <th><center>Date Depart</center></th>

                    <th><center>Heure Depart</center></th>
                    <th><center>Lieu Arrive</center></th>
                    <th><center>Date Arrive</center></th>

                    <th><center>Heure Arrive</center></th>
                    <th><center>Modifier</center></th>
                    <th><center>Delete</center></th>


                </tr>
                </thead>

                {% for r in res %}
                    <tr>
                        <td><center> {{ r.getIdvol() }} </center> </td>
                        <td> <center> {{ r.getLieuDepart() }} </center> </td>
                        <td><center> {{ r.getDateDepart() }} </center> </td>


                        <td> <center> {{ r.getHeureDepart() }} </center> </td>
                        <td> <center> {{ r.getLieuArrive() }} </center> </td>

                        <td><center> {{ r.getDateArrive() }} </center> </td>

                        <td> <center> {{ r.getHeureArrive() }} </center> </td>

                        <form action="{{ path('modifiervol') }}" method="post">
                            <td> <center>  <input type="hidden" name="idvol" value="{{ r.getIdvol() }}"><button type="submit" class="btn btn-default submit" >Modifier</button></center></td></form>
                        <form action="{{ path('supprimervol') }}" method="post">
                            <td> <center>


                                    <input type="hidden" name="idvol" value="{{ r.getIdvol() }}">

                                    <a href="#1{{ r.getIdvol() }}" role="button" class="btn btn-default submit" data-toggle="modal">Delete</a>
                                    <div class="modal fade" id="1{{ r.getIdvol() }}" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">

                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                        ×
                                                    </button>
                                                    <h4 class="modal-title" id="myModalLabel">
                                                        Delete
                                                    </h4>
                                                </div>
                                                <div class="modal-body">
                                                    Confirmation du suppression
                                                </div>
                                                <div class="modal-footer">

                                                    <button type="button" class="btn btn-danger" data-dismiss="modal">
                                                        Close
                                                    </button>
                                                    <button type="submit" class="btn btn-default success">Delete</button>
                                                    <input type="hidden" name="name" value="{{ r.getIdvol() }}">

                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                    </center></td></form>
                    </tr>

                {% endfor %}
                </tbody>

            </table>

        </div></div></div>

        </div>
    </div>
</div>









