{% block body %}
    <div class="right_col" role="main">
        <div class="">
            <div class="">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Afficher Station <small>Gestion Stock</small></h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <div class="clearfix"></div>
                                <br><br>
            <div class="clearfix"></div>
            <br><br>
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-5">
                <a class="btn btn-default submit" href="{{ path('ajoutstation') }}" >Ajouter Station</a>

            </div>
            <br><br><br><br>

            <div class="row">


                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th><center>Name</center></th>
                        <th><center>CSR</center></th>
                        <th><center>Modifier</center></th>
                        <th><center>Delete</center></th>


                    </tr>
                    </thead>

                    <tbody>

                    {% for r in res %}
                        <tr>

                            <td><center> {{ r.getName() }} </center> </td>

                            <td> <center> {{ r.getCsr() }} </center> </td>

                            <form action="{{ path('modifierstation') }}" method="post">
                                <td> <center>  <input type="hidden" name="name" value="{{ r.getName() }}"><button type="submit" class="btn btn-default submit" >Modifier</button></center></td></form>
                            <form action="{{ path('supprimestation') }}" method="post">
                                <td> <center>  <input type="hidden" name="name" value="{{ r.getName() }}">

                                        <a href="#1{{ r.getName() }}" role="button" class="btn btn-default submit" data-toggle="modal">Delete</a>
                                        <div class="modal fade" id="1{{ r.getName() }}" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">

                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                            Ã—
                                                        </button>
                                                        <h4 class="modal-title" id="myModalLabel">
                                                            Delete
                                                        </h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        Confirmation du suppression
                                                    </div>
                                                    <div class="modal-footer">

                                                        <button type="button" class="btn btn-danger" data-dismiss="modal">
                                                            Close
                                                        </button>
                                                        <button type="submit" class="btn btn-default success">Delete</button>
                                                        <input type="hidden" name="name" value="{{ r.getName() }}">

                                                    </div>
                                                </div>

                                            </div>

                                        </div>


                                    </center></td></form>
                        </tr>

                    {% endfor %}
                    </tbody>

                </table>


</div></div></div></div></div>
            </div>
        </div>
    </div>









