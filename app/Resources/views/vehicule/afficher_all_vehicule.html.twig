{% block body %}
<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Afficher Vehicules<small>Gestion Mission</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
        <div class="clearfix"></div>
        <br><br>
        <div class="col-md-2 col-sm-2 col-xs-12 col-md-offset-4">
            <a class="btn btn-default submit" href="{{ path('ajoutvehicule') }}" >Ajouter vehicule</a>

        </div>
                    <div class="col-md-3 col-sm-3 col-xs-12 ">
                        <a class="btn btn-default submit" href="{{ path('afficherallmission') }}" >Afficher Missions
                        </a>
                    </div>
        <br><br><br><br>

        <div class="row">
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th><center>Num Vehicule</center></th>
                    <th><center>UT</center></th>
                    <th><center>Marque</center></th>
                    <th><center>Genre</center></th>
                    <th><center>Puissance</center></th>
                    <th><center>Carburant</center></th>
                    <th><center>Date Entreé</center></th>
                    <th><center>Disponibilte</center></th>
                    <th><center>Etat</center></th>
                    <th><center>Index km</center></th>




                    <th><center>Modifier</center></th>
                    <th><center>Delete</center></th>


                </tr>
                </thead>

                {% for r in res %}
                    <tr>

                        <td><center> {{ r.getNumVehicule() }} </center> </td>
                        <td><center> {{ r.getUT() }} </center> </td>
                        <td><center> {{ r.getMarque() }} </center> </td>
                        <td><center> {{ r.getGenre() }} </center> </td>
                        <td><center> {{ r.getPuissance() }} </center> </td>
                        <td><center> {{ r.getCarburant() }} </center> </td>
                        <td><center> {{ r.getDateEntre() }} </center> </td>

                        {% if  r.getDisponibilite() == 1 %}
                            <td><center>Disponible </center></td>
                        {% else %}
                            <td><center>Non Disponible</center></td>

                        {% endif %}


                        <td><center> {{ r.getEtat() }} </center> </td>
                        <td><center> {{ r.getIndexkm() }} </center> </td>




                        <form action="{{ path('modifiervehicule') }}" method="post">
                            <td> <center>  <input type="hidden" name="idvehicule" value="{{ r.getIdvehicule() }}"><button type="submit" class="btn btn-default submit" >Modifier</button></center></td></form>
                        <form action="{{ path('supprimervehicule') }}" method="post">
                            <td> <center>  <input type="hidden" name="idvehicule" value="{{ r.getIdvehicule() }}">

                                    <a href="#1{{ r.getIdvehicule() }}" role="button" class="btn btn-default submit" data-toggle="modal">Delete</a>
                                    <div class="modal fade" id="1{{ r.getIdvehicule() }}" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">

                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                                        ×
                                                    </button>
                                                    <h4 class="modal-title" id="myModalLabel">
                                                        Delete
                                                    </h4>
                                                </div>
                                                <div class="modal-body">
                                                    Confirmation du suppression
                                                </div>
                                                <div class="modal-footer">

                                                    <button type="button" class="btn btn-danger" data-dismiss="modal">
                                                        Close
                                                    </button>
                                                    <button type="submit" class="btn btn-default success">Delete</button>
                                                    <input type="hidden" name="name" value="{{ r.getIdvehicule() }}">

                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                </center></td></form>
                    </tr>

                {% endfor %}
                </tbody>

            </table>


</div></div></div></div></div>
        </div>
    </div>
</div>









