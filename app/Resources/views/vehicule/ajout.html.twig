{% extends "basegentela.html.twig" %}
{% block title %}Ajout vehicule{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets filter='cssrewrite' 'Bundles/app/gentelella/css/select/select2.min.css'  %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
    {% stylesheets filter='cssrewrite' 'Bundles/app/gentelella/css/switchery/switchery.min.css'  %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}
{% block body %}

    <div class="right_col" role="main">
        <div class="">



            <div class="clearfix"></div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Ajouter vehicule <small>Gestion Mission</small></h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <center>
                                {{ form_start(form) }}

                                <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {{ form_row(form.numvehicule,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Nnumero Vehicule( metter 09- au debut)','data-inputmask':"'mask': '09-999999'"}}) }}

                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {{ form_row(form.UT,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'UT'}}) }}

                                    </div>
                                </div>

                                <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {{ form_row(form.marque,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Marque'}}) }}

                                    </div>
                                </div>
                                <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {{ form_row(form.genre,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Genre'}}) }}

                                    </div>
                                </div>


                                <div class="form-group">


                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    {{ form_row(form.puissance,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Puissance'}}) }}

                                </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                {{ form_row(form.carburant,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Carburant'}}) }}

                            </div>
                        </div>
                        <div class="form-group">

                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                {{ form_row(form.dateEntre,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Date Entre','data-inputmask':"'mask': '99/99/2099'"}}) }}

                            </div>
                        </div>

                                <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {{ form_row(form.etat,{'attr': {'class': 'select2_single form-control col-md-7 col-xs-12','placeholder': 'Etat'}}) }}

                                    </div>
                                </div>

                                <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {{ form_row(form.disponibilite,{'attr': {'class': 'select2_single form-control col-md-7 col-xs-12','placeholder': 'Disponibilte'}}) }}

                                    </div>
                                </div>








                                   <div class="form-group">

                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        {{ form_row(form.indexkm,{'attr': {'class': 'form-control col-md-7 col-xs-12','placeholder': 'Index km'}}) }}

                                    </div>
                                    </div>






                                <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>

                                <div class="form-group">
                                    <div class="ln_solid"></div>
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="reset" class="btn btn-primary" >Cancel</button>
                                        <button type="submit" class="btn btn-success">Submit</button>
                                        <a class="btn btn-default submit" href="{{ path('affichervehicule') }}" >Retour</a>
                                    </div>
                                </div>
                                {{ form_end(form) }}
                            </center>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function() {
            $('#birthday').daterangepicker({
                singleDatePicker: true,
                calender_style: "picker_4"
            }, function(start, end, label) {
                console.log(start.toISOString(), end.toISOString(), label);
            });
        });
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>

    {% javascripts '@AppBundle/Resources/public/gentelella/js/select/select2.full.js' output='js/select/select2.full.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        $(document).ready(function() {
            $(".select2_single").select2({
                placeholder: "Select un parmit les options",
                allowClear: true
            });
            $(".select2_group").select2({});
            $(".select2_multiple").select2({
                maximumSelectionLength: 4,
                placeholder: "With Max Selection limit 4",
                allowClear: true
            });
        });
    </script>

    <!-- input mask -->
    {% javascripts '@AppBundle/Resources/public/gentelella/js/input_mask/jquery.inputmask.js' output='js/input_mask/jquery.inputmask.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <!-- input_mask -->
    <script>
        $(document).ready(function() {
            $(":input").inputmask();
        });
    </script>
    <!-- /input mask -->
{% endblock %}